<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<fx:root spacing="30.0" type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" spacing="50.0">
         <children>
            <Label fx:id="lblName" text="Athlete name">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="lblSpeed" text="Current speed" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" prefWrapLength="420.0">
               <children>
                  <ProgressBar fx:id="pbSwimming" progress="0.0" style="-fx-background-color: green;" />
                  <ProgressBar fx:id="pbCycling" progress="0.0" style="-fx-background-color: yellow;" />
                  <ProgressBar fx:id="pbRunning" progress="0.0" style="-fx-background-color: red;" />
               </children>
            </FlowPane>
            <ProgressIndicator fx:id="piSummary" progress="0.0" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</fx:root>
